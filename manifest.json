{
    "manifest_version": 3,
    "name": "AutoAct",
    "version": "1.0.0",
    "description": "AutoAct Chrome Extension",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["sidePanel", "tabs", "activeTab", "storage", "scripting"],
    "side_panel": {
        "default_path": "index.html",
        "default_title": "AutoAct"
    },
    "content_scripts": [
        {
            "js": ["contentScript.js"],
            "matches": ["<all_urls>"],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["*.css", "*.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "host_permissions": ["<all_urls>"]
}
